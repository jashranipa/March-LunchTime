#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;

    while(t--)
    {
        long long int a,y,x;
        cin>>a>>y>>x;
        long long int ans1=(y*x);
        long long int ans2=(a*x);
        if(a>y)
        {
            cout<<(ans1)<<endl;
            continue;
        }
        if(a<y)
        {
            cout<<((ans2)+1)<<endl;
            continue;
        }
        if(a==y)
        {
            cout<<((ans2))<<endl;
        }

        

    }
    return 0;
}
